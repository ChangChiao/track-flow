generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// 使用者模型
model User {
  id         String    @id @default(cuid())
  email      String    @unique
  name       String
  role       UserRole  @default(VIEWER)
  isActive   Boolean   @default(true)
  department String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  // 關聯
  responsibleProjects Project[]        @relation("ResponsiblePerson")
  projectHistories    ProjectHistory[]

  @@index([role])
  @@index([isActive])
}

// 專案模型
model Project {
  id                   String        @id @default(cuid())
  name                 String
  description          String?       @db.Text
  startDate            DateTime      @db.Date
  endDate              DateTime      @db.Date
  progress             Float         @default(0)
  responsiblePersonId  String?
  status               ProjectStatus @default(ACTIVE)
  createdAt            DateTime      @default(now())
  updatedAt            DateTime      @updatedAt

  // 關聯
  responsiblePerson User?            @relation("ResponsiblePerson", fields: [responsiblePersonId], references: [id], onDelete: SetNull)
  histories         ProjectHistory[]

  @@index([startDate, endDate])
  @@index([responsiblePersonId])
  @@index([status])
}

// 專案歷程模型
model ProjectHistory {
  id        String         @id @default(cuid())
  projectId String
  userId    String
  action    HistoryAction
  changes   Json
  createdAt DateTime       @default(now())

  // 關聯
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Restrict)

  @@index([projectId])
  @@index([createdAt])
}

// 列舉型別
enum UserRole {
  VIEWER
  EDITOR
  ADMIN
}

enum ProjectStatus {
  ACTIVE
  COMPLETED
  ARCHIVED
}

enum HistoryAction {
  CREATE
  UPDATE
  DELETE
}